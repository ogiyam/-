<!DOCTYPE html>
<html>
  <head>
    <title>Debugcho</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>


    <!-- jquery-uiの読み込み  -->
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>

    <!-- summernoteの読み込み  -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

    <!-- FontAwesomeの読み込み  -->
    <script src="https://kit.fontawesome.com/91ca5c5bd0.js" crossorigin="anonymous"></script>
  </head>


    <body style="padding-top:5rem">

      <header class="navbar navbar-expand-lg navbar-dark bg-info fixed-top" >
        <div class="container-fluid">


            <% if user_signed_in? %>
                <nav class="navbar-nav mr-auto">
                  <%= link_to image_tag('top-logo-header.png'), user_path(current_user), class:"header-title"  %>
                </nav>
                <nav class="navbar-nav ml-auto">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                  <%= link_to '使い方', about_path, class: "btn btn-primary col-xs-12" %>
                  <%= link_to 'myデータベース', user_large_categories_path(@user, @large_category), class: "btn btn-primary col-xs-12" %>
                  <%= link_to '検索する', search_large_categories_path, class: "btn btn-primary col-xs-12" %>
                  <%= link_to 'まとめてポイlist', new_todo_path, class: "btn btn-primary col-xs-12" %>
                </nav>
            <% else %>
                <nav class="navbar-nav mr-auto">
                  <%= link_to image_tag('top-logo-header.png'), root_path, class:"header-title"  %>
                </nav>
            <% end %>
          </nav>
        </div>
      </header>
      <%= yield %>
    </body>
</html>
