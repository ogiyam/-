<h1>SmallCategory#edit</h1>
<h1>note</h1>


      <%= form_with model:[@large_category, @small_category], url: small_category_path(@small_category), local:true do |f| %>

         <%= render 'layouts/errors', bg: @small_category %>


          <div class="text_field">
             <%= f.label :title %><br>
             <%= f.text_field :title %><br>

          </div>
          <textarea id="summernote" name="small_category[note]"></textarea>


         <%= f.submit '更新する', class: "btn btn-primary col-xs-12" %>

      <% end %>





    <!--link_to '一覧へ戻る', large_category_small_categories_path, class: "btn btn-primary col-xs-12" -->
