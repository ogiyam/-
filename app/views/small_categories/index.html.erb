<h1>SmallCategory#index</h1>

<div class="justify-content">
    <div class="row">


      <div class="col-sm-4">

        <div class="card shadow-lg" style="width: 30rem;">
            <div class="card-header">
             <%= @large_category.genre.name %>
            </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= @large_category.problem %></li>
            <li class="list-group-item"><%= @large_category.solution %></li>
          </ul>
        </div>

        <%= link_to '新規ノート', new_large_category_small_category_path, class: "btn btn-primary col-xs-12" %>

      </div>



        <div class="col-sm-6 offset-sm-1 ">

            <% @small_categories.each do |small_category| %>

              <div class="card text-center" style="width: 30rem; ">
                <div class="card-header" >
                  <%= l small_category.created_at, format: :short %>
                  <div id="star-btn<%= small_category.id %>" class="text-right" >
                    <%= render "stars/star-btn", small_category: small_category %>
                  </div>
                </div>


                <ul class="list-group list-group-flush">
                 <li class="list-group-item"><%= link_to small_category.title, small_category_path(small_category) %></li>
                </ul>
              </div>

            <% end %>

        </div>

    </div>
</div>