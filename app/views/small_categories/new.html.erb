<h1>note</h1>





      <%= form_with model:[@large_category, @small_category], url: large_category_small_categories_path, method: :post, local:true do |f| %>

         <%= render 'layouts/errors', bg: @small_category %>


          <div class="text_field">
             <%= f.label :title %><br>
             <%= f.text_field :title %><br>
             <%= f.hidden_field :large_category_id, :value => @large_category.id %>
          </div>
          <textarea id="summernote" name="small_category[note]"></textarea>


         <%= f.submit '新規作成', class: "btn btn-primary col-xs-12" %>

      <% end %>





    <%= link_to '一覧へ戻る',  large_category_small_categories_path(@large_category,@small_category), class: "btn btn-primary col-xs-12" %>
    <%= link_to 'show',  small_category_path(@large_category,@small_category), class: "btn btn-primary col-xs-12" %>










