<div class="container-fluid" style="margin-top:-6px;">
  
      <%= link_to 'ノート一覧へ戻る', large_category_small_categories_path(@large_category), class: "link far fa-arrow-alt-circle-left" %>
      
      <h3>note</h3>
       
            <%= form_with model:[@large_category, @small_category], url: large_category_small_categories_path, method: :post, local:true do |f| %>
      
               <%= render 'layouts/errors', bg: @small_category %>
      
                <%= f.submit '登録する', class: "btn btn-dark col-xs-12" %>
                
                <div class="text_field">
                   <%= f.label :title %><br>
                   <%= f.text_field :title %><br>
                   <%= f.hidden_field :large_category_id, :value => @large_category.id %>
                </div>
                <textarea id="summernote" name="small_category[note]"></textarea>
      
            <% end %>

</div>




