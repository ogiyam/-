<div class="container-fluid">


<%= link_to 'ノート一覧へ戻る', large_category_small_categories_path(@small_category.large_category_id), class: "link far fa-arrow-alt-circle-left" %>

<h3>note</h3>

<%= @small_category.title %>

<textarea id="summernote" name="small_category[note]">
  <%= @small_category.note %>
</textarea>

<%= link_to '削除',  small_category_path(@small_category), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger col-xs-12" %>



     <!-- include libraries(jQuery, bootstrap) -->
